<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="600.0px"
  android:layout_height="350.0px"
  android:background="#C8C8C8"
  >
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="60.0px"
		android:orientation="horizontal"
		android:id="@+id/TextView01"
		android:textStyle="bold"
		android:textSize="20px"
		android:minLines="3"
		android:layout_y="10px" 
    	android:layout_x="10px"
		android:text="Please Enter Your Google Reader Username, Password, and the Label From Which To Retreive Feeds" />
	<TextView
		android:layout_y="60px" 
    	android:layout_x="10px"
		android:layout_width="fill_parent"
		android:layout_height="40.0px"
		android:orientation="horizontal"
		android:id="@+id/TextView01"
		android:textSize="18px"
		android:paddingTop="10.0px"
		android:text="Username" />
	<EditText
		android:layout_y="100px"
    	android:layout_x="10px"
		android:orientation="horizontal"
		android:layout_width="500px"
 		android:layout_height="wrap_content"
		android:id="@+id/EditText01"
		android:text=""
		android:singleLine="true"
		android:editable="true"
		android:shadowColor="#000000"
		android:inputType="textWebEditText"
		android:imeOptions="actionDone|flagNoEnterAction" />
	<TextView
		android:layout_y="150px" 
    	android:layout_x="10px"
		android:layout_width="fill_parent"
		android:layout_height="40.0px"
		android:orientation="horizontal"
		android:id="@+id/TextView01"
		android:textSize="18px"
		android:paddingTop="10.0px"
		android:text="Password" />
	<EditText
		android:layout_y="190px"
    	android:layout_x="10px"
		android:orientation="horizontal"
		android:layout_width="500px"
		android:layout_height="wrap_content"
		android:id="@+id/EditText02"
		android:text=""
		android:singleLine="true"
		android:editable="true"
		android:shadowColor="#000000"
		android:inputType="textWebEditText"
		android:imeOptions="actionDone|flagNoEnterAction" />
	<TextView
		android:layout_y="240px" 
    	android:layout_x="10px"
		android:layout_width="fill_parent"
		android:layout_height="40.0px"
		android:orientation="horizontal"
		android:id="@+id/TextView01"
		android:textSize="18px"
		android:paddingTop="10.0px"
		android:text="Label To Use" />
	<EditText
		android:layout_y="280px"
    	android:layout_x="10px"
		android:orientation="horizontal"
		android:layout_width="500px"
		android:layout_height="wrap_content"
		android:id="@+id/EditText03"
		android:text="nook"
		android:singleLine="true"
		android:editable="true"
		android:shadowColor="#000000"
		android:inputType="textWebEditText"
		android:imeOptions="actionDone|flagNoEnterAction" />	
		
</AbsoluteLayout>

